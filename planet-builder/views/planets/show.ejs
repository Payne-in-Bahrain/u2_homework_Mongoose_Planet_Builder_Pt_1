<%-include("../partials/header") %>
<li>Name: <%= planet.name %>, Climate: <%= planet.climate %>, Population: <%= planet.population %>, Size: <%= planet.size %>, Animals: 
<%planet.animals.forEach(animal=>{%>
(Name: <%= animal.name%>,Quantity: <%= animal.quantity%>)
<%})%>

</li>
<br>
<h2>Add new Animals for the <%= planet.name %> planet</h2>
<form method="POST" action="/planets/<%= planet._id %>/animals">
  <div>
    <label for="name">Name:</label>
    <input type="text" id="name" name="name" required>
  </div>
  <div>
    <label for="quantity">Quantity:</label>
    <input type="number" id="quantity" name="quantity" required>
  </div>
  <button type="submit">Add Animal</button>
</form>
<br><br><h2>Add a Explorer</h2>
<form method="POST"  action="/explorers/planets/<%= planet._id %>/explorers">
  <select name="explorerId">
    <% availableexplorers.forEach((explorer) => { %>
      <option value="<%= explorer._id %>"><%= explorer.name %></option> 
    <% }); %>
  </select>
  <input type="submit" value="Add Explorer">
</form>

<% if (planet.explorers && planet.explorers.length) { %>
  <h3>Explorers:</h3>
  <ul>
    <% planet.explorers.forEach((explorer) => { %>
      <li><%= explorer.name %></li>
    <% }); %>
  </ul>
<% } else { %>
  <h5>No Explorers yet</h5>
<% } %>



<%- include('../partials/footer') %>
