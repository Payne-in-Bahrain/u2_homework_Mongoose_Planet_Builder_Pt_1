<%- include('../partials/header') %>
<main>
  <section id="details">
    <h1><%= planet.name %></h1>
    <p>Climate: <b><%= planet.climate %></b> Population: <b><%= planet.population %></p>
    <p></b></p>
  </section>

  <section id="addPlant">
    <h1>Add Plant</h1>
    <form action="/planets/<%=planet._id%>/plants" method="POST">
      <input type="text" name="name" placeholder="Name">
      <br>
      <input type="text" name="color" placeholder="Color">
      <br>
      <label for="poisonous">Poisonous</label>
      <input type="checkbox" name="poisonous">
      <br>
      <button type="submit">Submit</button>
    </form>
  </section>

  <section id="plant">
    <% if (planet.plants.length) { %>
      <h1>Plants</h1>
      <table>
        <tr>
          <th>Name</th>
          <th>Color</th>
          <th>Poisonous</th>
        </tr>
        <% planet.plants.forEach((plant) => { %>
          <tr>
            <td><%= plant.name %></td>
            <td><%= plant.color %></td>
            <td>
              <% if (!!plant.poisonous) { %>
                <p>&#10062;</p>
              <% } else { %>
                &#9989;
              <% } %>
            </td>
          </tr>
        <% }) %>
      </table>
    <% } else { %>
      <p>No Plants Added</p>
    <% } %>
  </section>

  <section id="addRxplorer">
    <h1>Add Explorer</h1>
    <form action="/planets/<%= planet._id %>/explorers" method="POST">
      <select name="explorerId">
        <option disabled>Select Explorer</option>
      <% explorers.forEach((explorer) => { %>
        <option value="<%= explorer._id %>"><%= explorer.name %></option>
      <% }) %>
      </select>
      <br>
      <button type="submit">Submit</button>
    </form>
  </section>

  <section id="explorer">
    <h1>Explorer</h1>
    <ul>
    <% plantExplorers.forEach((explorer) => { %>
      <li><%= explorer.name %></li>
    <% }) %>
    </ul>
  </section>
</main>

<%- include('../partials/footer') %>
