<%- include('../partials/header') %>


<h2>Name: <%= planet.name %><br>
    Population:   <%= planet.population %><br>
    Climate:   <%= planet.climate %><br></h2>


    <form  method="POST"
    action="/planets/<%= planet._id %>/plants">
    <h4>plants:</h4>
    <label for="name">name:</label>
    <input type="text" name="name">
    <label>color:</label>
    <input type="text" name="color">
    <label>poisonous:</label>
    <select name="poisonous">
      <option value=true>Yes</option>
      <option value=false selected>No</option>
    </select>
    <input type="submit" value="Add plant">
  </form>
  </form>

  <% if (planet.plant.length) { %>
    <table>
      <thead>
        <tr>
          <th>name</th>
          <th>color</th>
          <th>poisonous</th>
        </tr>
      </thead>
      <tbody>
        <% planet.plant.forEach(function(r) { %>
          <tr>
            <td><%= r.name %></td>
            <td><%= r.color %></td>
            <td><%= r.poisonous %></td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  <% } else { %>
    <h5>No plant Yet</h5>
  <% } %>
 
  <h2>Add an Explorer</h2>
<form method="POST"
  action="/planets/<%= planet._id %>/explorers">
  <select name="selectedExplorer">
    <% avalibleExplorer.forEach((explorer) => { %>
      <option value="<%= explorer._id %>"><%= explorer.name %></option> 
    <% }); %>
  </select>
  <input type="submit" value="Add Explorer">
</form>

<% if (planet.explorer.length) { %> 
  <h3>Explorers</h3>
  <ul>
    <% planet.explorer.forEach((e) => { %>
      <li><%= e.name %></li>
    <% }); %>
  </ul>
<% } else { %>
  <h5>No Explorers Yet</h5>
<% } %>


<%- include('../partials/footer') %>

