<%- include("../partials/header")%>
<h2>Add a new planet</h2>
<form action="/planets" method="POST">
  <label>Name:
    <input type="text" name="name">
  </label><br>
  <label>Climate:
    <select name="climate">
      <option value="cold">Cold</option>
      <option value="hot">Hot</option>
      <option value="tropical">Tropical</option>
      <option value="pleasant">Pleasant</option>
      <option value="poisonous gas"> Poisonous gas</option>
     
    </select>
    <!-- <input type="text" name="climate"> -->
    <label>Population:
    <input type="text" name="population">
  </label><br>
  <br>
  </label><br>
  <label>Possible Alien Life:
    <input type="checkbox" name="Possible_alien_life" checked>
  </label><br>
  <button type="submit">Add a Planet</button>
</form>
<%- include("../partials/footer")%>