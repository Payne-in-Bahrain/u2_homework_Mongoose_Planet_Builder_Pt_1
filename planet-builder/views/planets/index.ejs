<%- include('../partials/header') %>

<h2>Planet List</h2>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>size</th>
      <th>distanceFromSun</th>
      <th> hasMoons</th>
    </tr>
  </thead>
  <tbody>

<h1>Planets List</h1>
<% planets.forEach((p) => { %> 
 <tr>
        <td><%= p.name %></td>
        <td><%= p.size %></td>
        <td><%= p.distanceFromSun%></td>
        <!-- finish the ternary expression to display
                      'Yes' or 'Nope' --> 
        <td><%= p.hasMoons ? 'Yes' : 'Nope'  %></td>
      </tr>
      <% })  %> 
    <!-- Close the forEach using EJS here -->
  </tbody>
</table>

<%- include('../partials/footer') %>




